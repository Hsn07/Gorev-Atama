<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cardViewPersonel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/_75sdp"
    android:backgroundTint="@color/backgroundRowColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:srcCompat="@drawable/ic_personal"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/textPernonalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personel Adı"
                android:fontFamily="@font/balooda2_semibold"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/textSum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toplam zorluk seviyesi / Yapılan iş adedi"
                android:fontFamily="@font/balooda2_regular"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/white"
                android:gravity="center_vertical"/>
            <TextView
                android:id="@+id/textLastWork"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En son Yapılan iş"
                android:textColor="@color/white"
                android:fontFamily="@font/balooda2_regular"
                android:textSize="@dimen/_13ssp"
                android:gravity="center_vertical"/>


        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>